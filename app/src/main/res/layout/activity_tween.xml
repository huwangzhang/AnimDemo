<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.huwang.animdemo.MainActivity">

    <LinearLayout
        android:id="@+id/mmm"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alpha_start"
            android:onClick="alpha"/>
        <Button
            android:text="rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rotate_start"
            android:onClick="rotate"/>
        <Button
            android:text="scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scale_start"
            android:onClick="scale"/>
        <Button
            android:text="translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/translate_start"
            android:onClick="translate"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/mmm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:text="set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_start"
            android:onClick="set"/>
        <Button
            android:layout_below="@id/mmm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mystart"
            android:onClick="mystart"
            android:text="自定义动画"/>
    </LinearLayout>

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/sample1"/>
    <Button
        android:id="@+id/prePage"
        android:text="主页面"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
